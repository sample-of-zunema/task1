<h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>
      <div>Title</div>
      <%= f.text_field :title %>
      <div>Body</div>
      <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
    <% end %>

<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
